<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DataBindig.XamelElement.MainPage">
    <Grid RowDefinitions="auto,*"
            Padding="24"
            RowSpacing="25">

        <Grid Grid.Row="0"
                Grid.Column="0"
                ColumnDefinitions="auto,*"
                ColumnSpacing="8">

            <Label Text="Escribe lo que piensas: "
                    Grid.Row="0"
                    Grid.Column="0"
                    VerticalOptions="Center"
                    FontSize="Medium"/>

            <Entry Grid.Row="0"
                    Grid.Column="1"
                    Background="LightGray"
                    TextColor="Black"
                    x:Name="TextEntry"
                    FontSize="Medium"/>
        </Grid>
        <VerticalStackLayout
                Grid.Column="0"
                Grid.Row="1">

            <Label Text="Esto es lo que escribiste: "
                VerticalOptions="Center"
                FontSize="Medium"/>

            <Label Text="{Binding Source={x:Reference TextEntry},Path=Text}"
                    HorizontalOptions="Center"
                    FontSize="Medium"
                    FontAttributes="Italic"
                    x:Name="EnteredTextLabel"/>



        </VerticalStackLayout>

    </Grid>
</ContentPage>
